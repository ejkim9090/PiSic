<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="PjBoard">

<sql id="search_where">
		<if test="search == 'b_title' or search == 'b_content'">
			WHERE ${search } LIKE '%' || #{keyword } || '%'
		</if>
		<if test="search == 'b_writer'">
			WHERE <include refid="search_b_writer" />
		</if>
		<if test="search == 'all'">
			WHERE b_title LIKE '%' || #{keyword } || '%'
			OR b_content LIKE '%' || #{keyword } || '%'
			OR <include refid="search_b_writer" />
		</if>
</sql>

</mapper>
